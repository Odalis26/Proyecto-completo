<script src="../assets/assets/js/validator.js"></script>
<script>

    $().ready(function () {

        // validate signup form on keyup and submit
        $("#formulario").validate({
            rules: {
                cedula: {
                    required: true,
                    minlength: 10,
                    maxlength: 10,
                    number: true
                },
                nombre: {
                    required: true,
                    minlength: 3
                },
                apellido: {
                    required: true,
                    minlength: 3
                }
            },
            messages: {
                cedula: {
                    required: "Ingrese la cedula",
                    minlength: "Usted puede agregar minimo 10 caracteres",
                    maxlength: "Usted puede agregar maximo 10 caracteres",
                    number: "Solo numeros"
                }
            }
        });

    });
</script>

